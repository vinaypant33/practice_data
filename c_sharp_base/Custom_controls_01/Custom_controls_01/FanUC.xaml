<UserControl x:Class="Custom_controls_01.FanUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Custom_controls_01"
             mc:Ignorable="d" 
             d:DesignHeight="130" d:DesignWidth="100">
    <StackPanel Background="FloralWhite">
        <local:fan_Csutom_Contorl Height="100" Width="100" HorizontalAlignment="Center" VerticalAlignment="Center" Fanon="{Binding Mode=TwoWay, Path=IsChecked ,ElementName=switch}"/>
        <CheckBox x:Name="switch"  Content="Fan Switch" Margin="10 10 10 10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
