<Window x:Class="payment_dashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:payment_dashboard"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="MainWindow" Height="690" Width="1150" WindowStartupLocation="CenterScreen"
         Background="Transparent" AllowsTransparency="True" WindowStyle="None">
    
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            

            <!--First side from the main application left one--> 
            <Border Width="220" CornerRadius="25 0 0 25">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="Green" Offset="0"></GradientStop>
                        <GradientStop Color="Gray" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <!--This is the another side right side for the main application which ie been divided-->
            <!--This is the main menu of the application-->

            <!--This application has donwloaded two nuget packages as font awesome-->


            <StackPanel Width="240">
                <StackPanel Orientation="Horizontal" Margin="0 50 20 40" HorizontalAlignment="Center" Height="51" Width="151">
                    <TextBlock Text="wally" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>
            </StackPanel>

            <Button Height="100" Width="100" VerticalAlignment="Top" Margin="0 120 0 0" Click="Button_Click">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock Text="Dashbaord"></TextBlock>
                    </StackPanel>
                </Grid>
            </Button>
            
            <Border CornerRadius="0 25 25 0" Grid.Column="1" MouseDown="Border_MouseDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,12">
                        <GradientStop Color="Gray" Offset="0"/>
                        <GradientStop Color="Black" Offset="10"/>
                        <GradientStop Color="Purple" Offset="3"/> 
                        <!--We can make the offset vlaue to any value that we desire and then we can make it to any value as well--> 
                        
                    </LinearGradientBrush>
                </Border.Background>
                
            </Border>            
            
        </Grid>
        
        
    
    </Grid>
</Window>
