<Window x:Class="sideboard_bar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sideboard_bar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"  WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DrawingBrush x:Key="HomeIconBrush" Stretch="Uniform">
            <DrawingBrush.Drawing>
                <GeometryDrawing Brush="White">
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <Geometry>M 10,20 L 10,13 14,13 14,20 19,20 19,12 22,12 12,4 2,12 5,12 5,20 z</Geometry>
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingBrush.Drawing>
        </DrawingBrush>
        <Style x:Key="SidebarTextVisibilityStyle" TargetType="TextBlock">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsChecked, ElementName=tg_btn}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="Black">
        <Grid x:Name="nav_panel" HorizontalAlignment="Left" Width="65" Background="Green">
            <StackPanel x:Name="st_panel">
                <Grid Height="90">
                    <ToggleButton x:Name="tg_btn"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"
                                  Margin="18,-20,0,0"
                                  Height="30" Width="30" BorderThickness="0">
                        <ToggleButton.Triggers>
                            <EventTrigger RoutedEvent="ToggleButton.Checked">
                                <BeginStoryboard>
                                    <Storyboard x:Name="showstackpanel">
                                        <DoubleAnimation Storyboard.TargetName="nav_panel"
                                                         Storyboard.TargetProperty="Width"
                                                         From="65" To="230"
                                                         Duration="0:0:0.22"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                                <BeginStoryboard>
                                    <Storyboard x:Name="hidestackpanel">
                                        <DoubleAnimation Storyboard.TargetName="nav_panel"
                                                         Storyboard.TargetProperty="Width"
                                                         From="230" To="65"
                                                         Duration="0:0:0.125"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ToggleButton.Triggers>
                    </ToggleButton>
                </Grid>

                <Button x:Name="btnHome"
                        Height="44"
                        Background="#11222222"
                        Foreground="White"
                        BorderBrush="Transparent"
                        HorizontalContentAlignment="Left"
                        Padding="8,0"
                        Cursor="Hand">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="44"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Width="22" Height="22"
                                   Fill="{StaticResource HomeIconBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1"
                                   Text="Home"
                                   Style="{StaticResource SidebarTextVisibilityStyle}"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   Margin="4,0,0,0"/>
                    </Grid>
                    <Button.ToolTip>
                        <ToolTip Content="Home"/>
                    </Button.ToolTip>
                </Button>

            </StackPanel>
        </Grid>
    </Grid>
</Window>
