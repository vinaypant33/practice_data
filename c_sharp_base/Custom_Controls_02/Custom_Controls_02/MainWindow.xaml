    <!--Layout core and base-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <StackPanel Orientation="Vertical" Margin="0 83 0 0">
                <TextBlock  Margin="65,0,0,0" Text="Drive" Foreground="#515EC1" HorizontalAlignment="Left" VerticalAlignment="Center"
                           FontSize="21" FontFamily="Arial Rounded MT Bold"></TextBlock>
                
                <customcontrols:menubutton  Padding="0" />
                <TextBlock Text="Files" Margin="65 27 0 0" Style="{StaticResource TileText}"/>

                <Button Width="140"
        Height="40"
        Background="#EEE"
        BorderBrush="#AAA"
        Padding="8"
        HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Path Data="{StaticResource DefaultIcon}"
              Fill="Black"
              Width="22"
              Height="22"
              Stretch="Uniform"
              Margin="0,0,8,0"/>
                        <TextBlock Text="Open File" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>

                <!--Region for the other controls--> 
            </StackPanel>

        </Grid>


    </Grid>
    
