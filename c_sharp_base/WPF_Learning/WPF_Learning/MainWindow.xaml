<!-- Window declaration with namespaces -->
<Window x:Class="WPF_Learning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="200" Width="360">

    <!-- Vertical layout for simplicity -->
    <StackPanel Margin="16" VerticalAlignment="Center">

        <!-- TextBox bound to the C# property 'username'
             Mode=TwoWay: user edits push to the property
             UpdateSourceTrigger=PropertyChanged: update on each keystroke -->
        <TextBox Width="240"
                 Text="{Binding username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Shows the current value of 'username' live -->
        <TextBlock Margin="0,12,0,0"
                   FontSize="16"
                   Text="{Binding username}"/>

        <!-- A button just so the window has another control -->
        <Button x:Name="Main"
                Margin="0,12,0,0"
                Width="240" Height="32"
                Content="I am the button"/>
    </StackPanel>
</Window>
